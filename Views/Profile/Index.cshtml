@{
    ViewData["Title"] = "Profile";
    ViewData["Menu"] = "Profile";
}

@model User;

<div class="container-fluid">
    <div class="row d-flex justify-content-center">

        <div class="col-lg-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Profile</h1>
            </div>

            <div class="card shadow p-4">
                <p>Excepteur proident cupidatat laboris commodo. Nulla magna magna non culpa laborum mollit officia
                    adipisicing occaecat sit amet culpa.</p>
                <form class="user" method="post" asp-controller="Profile" asp-action="Update">
                    <input type="hidden" name="id" value="@Model.Id">
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="name"
                            value="@Model.Name" placeholder="Enter Name...">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="username"
                            value="@Model.Username" placeholder="Enter Username..." readonly>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="email"
                            value="@Model.Email" placeholder="Enter Email...">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Update
                    </button>
                </form>
            </div>

        </div>

        <div class="col-lg-12 mb-4"></div>

        <div class="col-lg-4">
            <div class="card shadow p-4">
                <p>Change Password</p>
                <form class="user" method="post" asp-controller="Profile" asp-action="ChangePassword">
                    <input type="hidden" name="userId" value="@Model.Id">
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="newPassword"
                         placeholder="Enter New Password...">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Change Password
                    </button>
                </form>
            </div>

        </div>

    </div>

</div>