@model User;

@{
    ViewData["Title"] = Model.Name;
    ViewData["Menu"] = "Seekers";
}


<div class="container-fluid">

    <div class="row d-flex justify-content-center">

        <div class="col-lg-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Edit Seeker</h1>
            </div>
            <div class="card shadow p-4">
                <p>Excepteur proident cupidatat laboris commodo.</p>
                <form class="user" method="post" asp-route-id="@Model.Id" asp-controller="Seeker" asp-action="Update" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    @* <input type="hidden" name="Id" value="@Model.Id"> *@
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="Name" value="@Model.Name"
                            placeholder="Enter Seeker Name...">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="Email" value="@Model.Email"
                            placeholder="Enter Seeker Email...">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="Username" value="@Model.Username"
                            placeholder="Enter Seeker Username...">
                    </div>
                    <div class="form-group px-2">
                        @if(Model.ImageUrl != null) {
                            <img style="width: 60px; height: 60px; object-fit:cover;" class="rounded" src="/storage/@Model.ImageUrl" />
                        }
                        <div>Photo</div>
                        <input type="file" name="ImageFile" class="form-control-user mx-0 px-1 py-1">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Submit
                    </button>
                </form>
            </div>

        </div>
    </div>

</div>